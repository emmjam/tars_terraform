resource "aws_lb" "jenkins" {
  name                               = "${var.project}-${var.environment}-${var.component}-${var.name}"
  internal                           = var.alb_internal
  idle_timeout                       = var.alb_idle_timeout
  enable_cross_zone_load_balancing   = true
  security_groups                    = [aws_security_group.lb_sg.id]

  subnets = module.alb_subnets.subnet_ids

/*
  health_check {
    healthy_threshold   = var.alb_healthy_threshold
    unhealthy_threshold = var.alb_unhealthy_threshold
    timeout             = var.alb_healthcheck_timeout
    target              = "TCP:8080"
    interval            = var.alb_healthcheck_interval
  }
*/

  tags = merge(
    var.default_tags,
    {
      "Name" = format(
        "%s-%s-%s/%s",
        var.project,
        var.environment,
        var.component,
        var.name,
      )
      "Module" = var.module
    },
  )
}

