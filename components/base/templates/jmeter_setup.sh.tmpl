#!/bin/bash -xe

function log() {
  echo "[$(date)]$1" | tee -a /var/log/${nodetype}_cloudinit.log
}

log '[INFO] Running puppet to configure environment'

sed -E -i "s/'[a-z0-9]{8}\-[a-z0-9]{4}\-[a-z0-9]{4}\-[a-f0-9]{4}\-[a-z0-9]{12}'/'${kms_key}'/g" /etc/eyaml/config.yaml

cd /tmp/packer-puppet-masterless
export FACTER_environment='${environment}'
export FACTER_nodetype='${nodetype}'
export FACTER_aws_account='${aws_account_id}'

# TODO: peacheym: Convert this script to use standardised
# error handling, remove the "set -e" and then
# add --detailed-exitcodes and handle the return codes puppet provides
/opt/puppetlabs/bin/puppet apply \
  --verbose \
  --modulepath='/tmp/packer-puppet-masterless/module-0:/tmp/packer-puppet-masterless/module-1' \
  --hiera_config='/tmp/packer-puppet-masterless/hiera.yaml' \
  /tmp/packer-puppet-masterless/manifests/site.pp

log '[INFO] ${nodetype} configuration finished'
